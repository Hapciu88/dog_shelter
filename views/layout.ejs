<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || "Dog Shelter" %></title>
    <!-- Bootstrap CSS -->
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+5hb7x3OEG9Dw4mX7k4ExjY3xmbw3xYVIvlgm7K"
            crossorigin="anonymous"
    >
    <link rel="stylesheet" type="text/css" href="/main.css" />
</head>
<body class="bg-light">
<header class="bg-primary text-white text-center py-3">
    <h1><%= header || "Welcome to Dog Shelter" %></h1>
</header>

<main class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="list-group">
                <a href="/" class="list-group-item list-group-item-action">
                    Home
                </a>
                <a href="/about" class="list-group-item list-group-item-action">
                    About <%= appName %>
                </a>
                <a href="/search" class="list-group-item list-group-item-action">
                    Search for Dogs
                </a>
                <% if (appContextData.isLoggedIn) { %> <!-- Show Profile Link if User is Logged In -->
                <a href="/user/profile" class="list-group-item list-group-item-action">
                    Your Profile
                </a>
                <a href="/user/logout" class="list-group-item list-group-item-action">
                    Log Out
                </a>
                <% } else { %> <!-- Show Register/Sign In Links if No User Logged In -->
                <a href="/user/register" class="list-group-item list-group-item-action">
                    Register with Us
                </a>
                <a href="/user/signin" class="list-group-item list-group-item-action">
                    Sign in
                </a>
                <% } %>
            </div>
        </div>
    </div>
    <%- body %> <!-- Dynamic content will be inserted here -->
</main>


<footer class="text-center py-3 mt-5 bg-secondary text-white">
    <p>&copy; <%= new Date().getFullYear() %> Dog Shelter. All rights reserved.</p>
</footer>

<!-- Bootstrap Bundle JS -->
<script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-PL6D0VdL4PLxWCBbyh5Dk9qv4wpDFUINWvD5b8dxmb/KyEaw3U/AW7bTx9TF9sDF"
        crossorigin="anonymous"
></script>
</body>
</html>
